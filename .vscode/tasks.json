{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "func",
            "command": "host start",
            "problemMatcher": "$func-node-watch",
            "isBackground": true,
            "dependsOn": "yarn build (functions)",
            "options": {
                "cwd": "${workspaceFolder}/azure"
            }
        },
        {
            "type": "shell",
            "label": "yarn build (functions)",
            "command": "yarn build",
            "dependsOn": "yarn install (functions)",
            "problemMatcher": "$tsc",
            "options": {
                "cwd": "${workspaceFolder}/azure"
            }
        },
        {
            "type": "shell",
            "label": "yarn install (functions)",
            "command": "yarn install",
            "options": {
                "cwd": "${workspaceFolder}/azure"
            }
        }
    ]
}
